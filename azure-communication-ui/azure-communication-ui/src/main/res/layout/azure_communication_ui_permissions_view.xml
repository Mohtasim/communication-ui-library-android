<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/azure_communication_ui_permissions_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azure_communication_ui_color_background"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context="com.azure.android.communication.ui.presentation.fragment.setup.SetupFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/azure_communication_ui_request_allow_permissions_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/azure_communication_ui_mic_permissions_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/azure_communication_ui_permission_background"
            android:padding="10dp"
            android:src="@drawable/azure_communication_ui_ic_fluent_mic_on_24_permissions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/azure_communication_ui_permissions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Allow access to mic"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_mic_permissions_icon"

            />

        <TextView
            android:id="@+id/azure_communication_ui_permissions_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="So you’re heard on the call. This is required before joining."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_permissions_title"
            />

        <com.microsoft.fluentui.widget.Button
            android:id="@+id/azure_communication_ui_allow_permissions_allow_button"
            style="@style/Widget.FluentUI.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="30dp"
            android:backgroundTint="@color/azure_communication_ui_primary_selector"
            android:gravity="center"
            android:maxWidth="400dp"
            android:minWidth="400dp"
            android:text="Allow (Required)"
            android:textAllCaps="false"
            android:textColor="@color/azure_communication_ui_on_primary_enabled_disabled_selector"
            app:backgroundTint="@color/azure_communication_ui_primary_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_permissions_description"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/azure_communication_ui_request_settings_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/azure_communication_ui_permission_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/azure_communication_ui_allow_permissions_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/azure_communication_ui_permissions_title_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Allow access to mic"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_permission_settings"

            />

        <TextView
            android:id="@+id/azure_communication_ui_permissions_description_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="So you’re heard on the call."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_permissions_title_settings"
            />

        <LinearLayout
            android:id="@+id/azure_communication_ui_settings_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_permissions_description_settings"
            >
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/azure_communication_ui_permission_settings_text_background"
                android:gravity="center"
                android:text="1"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Tap Settings button below"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/azure_communication_ui_settings_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_settings_one"
            >
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/azure_communication_ui_permission_settings_text_background"
                android:gravity="center"
                android:text="2"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Turn on "
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/azure_communication_ui_ic_fluent_mic_on_24_permissions"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Microphone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/azure_communication_ui_settings_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_settings_two"
            >
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/azure_communication_ui_permission_settings_text_background"
                android:gravity="center"
                android:text="3"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Return to this app"
                />
        </LinearLayout>

        <com.microsoft.fluentui.widget.Button
            android:id="@+id/azure_communication_ui_allow_permissions_button"
            style="@style/Widget.FluentUI.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="30dp"
            android:backgroundTint="@color/azure_communication_ui_primary_selector"
            android:gravity="center"
            android:maxWidth="400dp"
            android:minWidth="400dp"
            android:text="Settings"
            android:textAllCaps="false"
            android:textColor="@color/azure_communication_ui_on_primary_enabled_disabled_selector"
            app:backgroundTint="@color/azure_communication_ui_primary_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/azure_communication_ui_settings_three"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
